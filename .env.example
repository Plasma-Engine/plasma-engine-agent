# Plasma Agent Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Keys - Required for LLM providers
# =============================================================================

# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key - Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Agent Configuration
# =============================================================================

# Agent name (optional, defaults to "PlasmaAgent")
AGENT_NAME=PlasmaAgent

# LLM Provider - "openai" or "anthropic"
LLM_PROVIDER=openai

# Model to use (provider-specific)
# OpenAI: gpt-4, gpt-4-turbo, gpt-3.5-turbo, etc.
# Anthropic: claude-3-opus-20240229, claude-3-sonnet-20240229, etc.
LLM_MODEL=gpt-4

# LLM Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3

# =============================================================================
# Memory Configuration
# =============================================================================

# Path to SQLite database for agent memory
MEMORY_DB_PATH=agent_memory.db

# =============================================================================
# Tool Configuration
# =============================================================================

# Enable/disable tools
ENABLE_TOOLS=true

# Allowed shell commands (comma-separated)
ALLOWED_SHELL_COMMANDS=ls,pwd,echo,cat,head,tail,grep,find,wc,date

# Web search configuration
WEB_SEARCH_ENGINE=duckduckgo
WEB_SEARCH_MAX_RESULTS=5

# =============================================================================
# Security Configuration
# =============================================================================

# Enable sandbox mode for tools
ENABLE_SANDBOX=true

# Maximum file size for file operations (bytes)
MAX_FILE_SIZE=10485760

# Blocked domains for web requests (comma-separated)
BLOCKED_DOMAINS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# Performance Configuration
# =============================================================================

# Enable response streaming
ENABLE_STREAMING=true

# Enable caching
ENABLE_CACHING=true
CACHE_TTL=3600

# Maximum concurrent tasks
MAX_CONCURRENT_TASKS=5

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format
LOG_FORMAT="{time} | {level} | {name}:{function}:{line} - {message}"

# Log rotation
LOG_ROTATION=1 day
LOG_RETENTION=1 week

# =============================================================================
# Development Configuration
# =============================================================================

# Enable debug mode
DEBUG_MODE=false

# Enable mock responses for testing
ENABLE_MOCK_RESPONSES=false

# Log API calls for debugging
LOG_API_CALLS=false

# Save raw LLM responses
SAVE_RAW_RESPONSES=false

# Test mode
TEST_MODE=false

# =============================================================================
# FastAPI Configuration (for web interface)
# =============================================================================

# App name
APP_NAME=plasma-engine-agent

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# MCP server configuration (optional)
RUBE_MCP_SERVER=

# =============================================================================
# Database Configuration (if using external database)
# =============================================================================

# Database URL (for advanced configurations)
# DATABASE_URL=sqlite:///./agent_memory.db
# DATABASE_URL=postgresql://user:password@localhost/plasma_agent
# DATABASE_URL=mysql://user:password@localhost/plasma_agent